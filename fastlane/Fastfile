require "yaml"

default_platform(:ios)

CONF = YAML.load_file('conf.yml')

platform :ios do
  before_all do
    ENV["SLACK_URL"] = CONF["slack"]["webhookurl"]
  end
  
  desc "Runs all the unit tests"
  lane :test do
    scan(scheme: "QiitaVieweriOS", clean: true, skip_slack: false)
  end

  lane :build do
    carthage(platform: "ios")
    test
    match(type: "adhoc")
    gym(scheme: "QiitaVieweriOS",
        configuration: "AdHoc",
        clean: true,
        export_method: "ad-hoc"
    )
    deploygate(api_token: $ApiKey,
               user: $User,
               message: $Message)
  end 
        
  after_all do |lane|
    if lane == :build
      slack(message: "Finished.")
    end
  end

  error do |lane, exception|
    slack(
      message: exception.message,
      success: false
    )
  end
end
